# Telegram API
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE_NUMBER=+81_your_phone

# Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Google Docs
GOOGLE_CREDENTIALS_PATH=./credentials/google_credentials.json
# （オプション）固定のGoogle DocsのDocument IDを指定すると、毎回同じドキュメントを上書き更新します
# 指定しない場合は毎回新しいドキュメントを作成します
# 例: GOOGLE_DOC_ID=1abc123XYZ...
GOOGLE_DOC_ID=

# 実行設定
TIMEZONE=Asia/Tokyo
EXECUTION_TIME=09:00
LOG_LEVEL=INFO

# Markdownバックアップの保存期間（日数）
# この日数より古いバックアップファイルは自動削除されます
MARKDOWN_BACKUP_RETENTION_DAYS=30
